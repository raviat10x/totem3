<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:theme="@style/NewDriverPageTheme"
    tools:context="com.move10x.totem.design.NoInternetActivity"
    android:layout_gravity="center">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="240dp"
        android:foregroundGravity="center"
        android:layout_marginTop="100dp"
        android:src="@drawable/icon_no_internet"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Internet not connected."
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"/>

    <TextView android:id="@+id/btnOnCheckInternet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:textColor="@color/colorAccent"
        android:text="TRY AGAIN"
        />

</LinearLayout>
