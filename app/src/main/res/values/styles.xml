<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="HEaderTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#1ac6ff</item>
    </style>

    <style name="NewDriverPageTheme" parent="@style/AppTheme">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="DriverDetailsPageTheme" parent="@style/AppTheme.AppBarOverlay">
        <item name="android:windowActionBarOverlay">true</item>

        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="DriverDetailsLabel" parent="@style/AppTheme.AppBarOverlay">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="CustomerDetailsLabel" parent="@style/AppTheme.AppBarOverlay">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="DriverDetailsTableRow">
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">17dp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="CustomerDetailsTableRow">
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">17dp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="BookingDetailsPageTheme" parent="@style/AppTheme.AppBarOverlay">
        <item name="android:windowActionBarOverlay">true</item>

        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="BookingDetailsLabel" parent="@style/AppTheme.AppBarOverlay">
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="HomeDriverInfoLabel" parent="@style/AppTheme.AppBarOverlay">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Divider_invisible">
        <item name="android:layout_width">1dip</item>
        <item name="android:layout_height">match_parent</item>
    </style>


</resources>
